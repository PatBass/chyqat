{% extends "APPlatformBundle::layout.html.twig" %}

{% block title %}Contact - {{ parent() }}{% endblock %}

{% block platform_body %}
    {% block header %}
        {% include('APPlatformBundle:Common:header.html.twig') with { active :'contact'} %}
    {% endblock %}
    {% block carousel %}
        {#{% include('APPlatformBundle:Common:carousel.html.twig') %}#}
    {% endblock %}
    {% block content %}
        <div  class="text-center tf-about">
            <div class="container">
                <div class="row" >
                    <div class="col-sm-10 col-sm-offset-1 alert alert-danger" style="text-align: center;border: 1px solid crimson;display: none;">
                        {#{% if error %}#}
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Close" class="close" data-dismiss="alert">&times;</button>
                        <div id="errorForm">{{ form_errors(form) }}</div>
                        {#{% endif %}#}
                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">

                        <div class="section-title center">
                            <h2>N'hésitez pas à <strong>nous contacter</strong></h2>
                            <div class="line">
                                <hr>
                            </div>
                            <div class="clearfix"></div>
                            <div class="row">
                                <div class="col-xs-offset-4 col-xs-5">
                                    {% if app.session.flashbag.has('notice') %}
                                        <div class="alert alert-success">
                                            <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button>
                                            {% for message in app.session.flashbag.get('notice') %}
                                                {{ message }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="whiteBorders marginTop50px">
                                <img src="{{ image('bundles/applatform/images/casablanca.jpg').cropResize(200,130) }}" />
                            </div>
                            <div class="marginTop25px marginBottom25px">
                                <small>
                                    <em>
                                        <strong>CHYQAT SARL</strong>

                                        39 AVENUE LALLA YACOUT 5ème Etage Appt D - Casablanca - Maroc |

                                        GSM : 00212 670 443 138 - 00212 681 251 925 – Viber – WhatsApp – imo : 00212 622 319 449  Fax : 00212 522 272 878 / Skype : chyqat.sarl


                                        <span style="color: blue;">E-mail :</span> contact@chyqat-formation.com | chyqat@chyqat-formation.com

                                    </em>
                                </small>
                            </div>

                        </div>

                        {{ form_start(form, {'attr': {'class': 'marginBottom25px', 'action':'contactAction', 'method':'POST', 'id':'contact'}}) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.email, "Email")}}
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id':'email', 'placeholder':'Votre email'}}) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.name, "Nom")}}
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'id':'name', 'placeholder':'Votre nom ou celui de votre société'}}) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.message, "Message")}}
                                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows':6, 'id':'message', 'placeholder':'Veuillez taper votre message ici'}}) }}
                                {{ form_errors(form.message) }}
                            </div>

                            <div class="form-group">
                                <div class="g-recaptcha" data-sitekey="6LdICQcUAAAAAMKjB3Cet82jKHwb_4S-ms8Wz-iE"></div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn tf-btn btn-success">{{ 'Envoyer'|trans }}</button>
                            </div>
                            {{ form_rest(form) }}
                        {{ form_end(form) }}

                    </div>
                </div>
                <div class="row marginTop50px">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d13202.492182865139!2d-7.612151636131141!3d33.59023514701672!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xf30e152be54abd8!2sTima+Services!5e0!3m2!1sfr!2s!4v1471799698758" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>

            </div>
            <script src='https://www.google.com/recaptcha/api.js'></script>
        </div>
    {% endblock %}
{% endblock %}
