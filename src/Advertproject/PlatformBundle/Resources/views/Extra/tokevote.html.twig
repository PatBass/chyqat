                    <table class="table table-striped table-condensed">
                        <caption>
                            <h4>Les résultats en temps réel (<span style="color:blue;">{{total}}</span> personnes ont voté sur 41 inscrits au total!)</h4>
                        </caption>
                        <thead>
                        <tr>
                            <th>Candidats</th>
                            <th>Points</th>
                            <th>Pourcentages</th>
                            {% if app.session.get('votant') in cj %}
                                <th>Votants</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody style="text-align: left;">
                        {% for choix in listChoix %}
                            <tr>
                                <td>
                                    {{ choix.proposition }}
                                </td>
                                <td>
                                    {{ choix.count }}
                                </td>
                                <td>
                                    {{ ((choix.count / total)*100) | number_format(1, ',', '.') }} %
                                </td>
                                {% if app.session.get('votant') in cj %}
                                    <td style="color:green;">
                                        {% if choix.votants is not empty %}
                                            {% for votant in choix.votants %}
                                                {{ votant.name }}{% if not loop.last %},&nbsp;{% endif %}
                                            {% endfor %}
                                        {% endif %}

                                    </td>
                                {% endif %}

                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
