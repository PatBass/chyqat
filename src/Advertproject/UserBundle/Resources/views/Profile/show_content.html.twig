{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show container-fluid" style="position: relative; top:50px;">
    <div class="row">
        {% if app.session.flashbag.has('info-edit') %}
            <div class="alert alert-success">
                {% for message in app.session.flashbag.get('info-edit') %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="col-sm-offset-1 col-sm-4">
        <div class="panel panel-default">
            <div class="panel-body" id="">
                <div class="row" >
                    <div class="col-sm-3 col-sm-offset-1">
                        {% if app.user.image is defined  %}
                            <img src="{{ image(app.user.image.webPath).cropResize(200,130) }}" />
                        {% else %}
                            <img src="{{ asset('bundles/applatform/images/lorem_ipsum.png') }}" style="max-width: 130px;max-height: 130px;" />
                        {% endif %}
                    </div>
                    <div class="col-sm-offset-1 col-sm-7"></div>
                </div>
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <p><h2>{{ user.companyName }}</h2></p>
                        <p>{{ 'profile.show.email'|trans }}: {{ app.user.email }}</p>
                        <p>
                            Profile Type:
                            {% if app.user.type == 0 %}
                                Manufacturer
                            {% elseif app.user.type == 1 %}
                                Buyer
                            {% elseif app.user.type == 2 %}
                                Agent
                            {% endif %}
                        </p>
                        <p>Subscription Date : </p>
                        <p>Last Modification</p>
                    </div>

                </div>
            </div>
            <div class="panel-footer">
                <a href="{{ path('fos_user_profile_edit', {'id':app.user.id}) }}" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> Edit Profile</a>
            </div>
        </div>
    </div>
    <div class=" col-sm-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>carousel here</p>
                <p>carousel here</p>
                <p>carousel here</p>
                <p>carousel here</p>
                <p>carousel here</p>
                <p>carousel here</p>
                <p>carousel here</p>
                <p>carousel here</p>
            </div>

        </div>
    </div>

</div>
